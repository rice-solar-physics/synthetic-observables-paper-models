#Text
## Use LaTeX fonts if possible
font.family : serif
font.serif : Computer Modern
text.usetex : True
## If LaTeX is not available, Stix works ok 
# font.family : stixgeneral
# mathtext.fontset : stix
# text.usetex : False
#Axes
#axes.unicode_minus : false # may be need for some fonts
axes.titlesize : 10
axes.labelsize : 10
#Lines
lines.linewidth : 1
#Ticks
xtick.labelsize : 8
ytick.labelsize : 8
xtick.major.pad : 8
xtick.minor.pad : 8
ytick.major.pad : 8
ytick.minor.pad : 8
ytick.direction : in
xtick.direction : in
#Legend
legend.fontsize : 8
#Save
savefig.dpi : 200
savefig.format : pdf
savefig.bbox : tight